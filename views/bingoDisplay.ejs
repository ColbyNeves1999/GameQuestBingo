    <div class="padding1">
        <table border="1" class="center1">
            <% if(size==3){ %>
                <tr>
                    <th>B</th>
                    <th>G</th>
                    <th>O</th>
                </tr>
                <%} else if(size==5) {%>
                    <tr>
                        <th>B</th>
                        <th>I</th>
                        <th>N</th>
                        <th>G</th>
                        <th>O</th>
                    </tr>
                    <%} else {%>
