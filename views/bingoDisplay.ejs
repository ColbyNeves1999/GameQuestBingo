                            <th>B</th>
                            <th>I</th>
                            <th>N</th>
                            <th>G</th>
                            <th>O</th>
                            <th>C</th>
                            <th>A</th>
                            <th>R</th>
                            <th>D</th>
                        </tr>
                        <%}%>
                            <%spot=0%>
                                <%for(let i=1; i <=size; i++) {%>
                                    <tr>
                                        <%while(spot < (size*i)) { %>

                                            <td class="bingobox1">
                                                <%if(bingoArray[spot]==="Free Space" ){ %>
                                                    <%=bingoArray[spot]%>
                                                        <%} else { %>
                                                            <button id="btn<%=spot%>" class="btnbox1">Collect
                                                                the "<%=bingoArray[spot]%>" Achievement</button>
                                                            <%}%>
                                            </td>
                                            <%spot=spot + 1%>
                                                <%}%>
                                    </tr>
                                    <%}%>

        </table>
    </div>

