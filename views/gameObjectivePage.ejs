<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Game List</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>

<body>

    <div class="btn-left">
        <form id="setDevice" method="GET" action="/index">
            <button class="btn2">Home</button>
        </form>
    </div>

    <h3>
        <form method="GET" action="/playerHomepage"><button class="btn1">User Homepage</button></form>
    </h3>

    <h3 class="header1">Player Submitted Objective List</h3>

    <h3 class="header1">
        <%= title %>
    </h3>

    <ul id="objList">
        <% for( let i=0; i < objectives.length; i++ ) { %>
            <li class="Objective">
                <h3 class="header1">
                    <%= objectives[i].objective %>
                        <form method="POST" action="/deletePlayerObjective">
                            <div class="btn-center">
                                <label for="objectiveID"></label>
                                <input type="hidden" name="objectiveID" id="objectiveID" placeholder="objectiveID"
                                    value="<%=objectives[i].objectiveID%>">
                                <label for="title"></label>
                                <input type="hidden" name="title" id="title" placeholder="title" value="<%=title%>">
                            </div>
                            <div class="obj-center">
                                <button class="btn1">Delete</button>
                            </div>
                        </form>

                </h3>

            </li>
            <% } %>
    </ul>

</body>

</html>